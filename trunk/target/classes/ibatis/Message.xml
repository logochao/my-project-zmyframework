<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="com.wendellup.app.valueobject.entity.Message">
	<typeAlias alias="Message"
		type="com.wendellup.app.valueobject.entity.Message" />

	<resultMap class="Message" id="messageResult">
		<result property="id" column="ID" />
		<result property="accountId" column="ACCOUNT_ID" javaType="Integer"
			jdbcType="int" />
		<result property="messageContent" column="MESSAGE_CONTENT"
			javaType="String" jdbcType="text" />
		<result property="messageTime" column="MESSAGE_TIME" javaType="java.util.Date"
			jdbcType="datetime" />
	</resultMap>

	<select id="queryAll" resultMap="messageResult">
		select ID,
		ACCOUNT_ID, MESSAGE_CONTENT, MESSAGE_TIME
		from T_MESSAGE;
	</select>

	<insert id="save" parameterClass="Message">
		insert into T_MESSAGE (ACCOUNT_ID, MESSAGE_CONTENT, MESSAGE_TIME)
		values (#accountId#, #messageContent#, now());
		<selectKey resultClass="int" keyProperty="id">
			select last_insert_id()
		</selectKey>
	</insert>

</sqlMap>